#!/bin/bash

url="http://127.0.0.1:1830/$(echo $1 | rg 'http.?://[^/]+/(.*)' -NIor '$1')"

while :
do
    out=$(curl -s "$url")
    echo "$out"
    echo ""

    url_full=$(echo "$out" | jq -r '.response.data.fetchBaseURL')
    url_path=$(echo "$url_full" | rg 'https://[^/]+/(.*)' -NIor '$1')
    url="http://127.0.0.1:1830/$url_path"

    sleep 0.4
done
